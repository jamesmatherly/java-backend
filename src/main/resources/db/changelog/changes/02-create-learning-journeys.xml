<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="02-create-learning-journeys" author="liquibase">
        <createTable tableName="learning_journeys">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_primary" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="varchar(36)">
                <constraints nullable="false" foreignKeyName="fk_learning_journeys_user" referencedTableName="users" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog> 