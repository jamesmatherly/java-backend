<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="03-create-steps" author="liquibase">
        <createTable tableName="steps">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="icon" type="text"/>
            <column name="order_index" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="completed" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="journey_id" type="varchar(36)">
                <constraints nullable="false" foreignKeyName="fk_steps_journey" referencedTableName="learning_journeys" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog> 