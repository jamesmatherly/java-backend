<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="05-create-positions" author="liquibase">
        <createTable tableName="positions">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="stock_symbol" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="average_price" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="current_price" type="decimal(10,2)"/>
            <column name="total_value" type="decimal(10,2)"/>
            <column name="portfolio_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_positions_portfolio" referencedTableName="portfolios" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog> 