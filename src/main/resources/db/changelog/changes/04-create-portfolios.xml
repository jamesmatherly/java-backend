<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="04-create-portfolios" author="liquibase">
        <createTable tableName="portfolios">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)"/>
            <column name="user_id" type="varchar(36)">
                <constraints nullable="false" foreignKeyName="fk_portfolios_user" referencedTableName="users" referencedColumnNames="id" deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog> 